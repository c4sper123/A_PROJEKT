<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="android.testnavigation.EditOfferScreen">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="50dp"
        android:background="@color/colorPrimary"


        android:elevation="4dp"
        android:id="@+id/toolbar">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            tools:context="${relativePackage}.${activityClass}"
            android:focusableInTouchMode="false">



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="UPRAV PONUKU"
                android:id="@+id/textView5"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBack"
                android:background="@color/colorPrimary"

                android:src="@mipmap/ic_back"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="3dp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:id="@+id/scroll_view"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Názov ponuky"
                android:id="@+id/textView2"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Začiatok ponuky"
                android:id="@+id/textView6"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:hint="DD/MM/YYYY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Koniec ponuky"
                android:id="@+id/textView7"
                android:layout_below="@+id/editText3"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:hint="DD/MM/YYYY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cena"
                android:id="@+id/textView8"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/editText4"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText5"
                android:inputType="number|textVisiblePassword"
                android:maxLength="8"
                android:digits="0123456789"
                android:hint="(€)"
                android:layout_below="@+id/textView8"
                android:layout_alignStart="@+id/editText4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Detail ponuky"
                android:id="@+id/textView9"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/editText5"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText6"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:hint="Detail..."/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktualizovať ponuku"
                android:id="@+id/button"
                android:layout_below="@+id/editText6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>>
    </ScrollView>


</RelativeLayout>




